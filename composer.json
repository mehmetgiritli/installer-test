{
    "name": "uofa/lsl",
    "description": "The Laravel Framework.",
    "keywords": ["framework", "laravel"],
    "license": "MIT",
    "type": "project",
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/uofa/uofa-maintenance.git"
        }
    ],
    "scripts": {
        "post-root-package-install": [
            "@composer create-project laravel/laravel laravel \"8.*\"",
            "cd laravel",
            "composer config repositories.microservice-starter-lib vcs https://github.com/uofa/microservice-starter-lib",
            "composer require uofa/microservice-libs"
        ]
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true
    }
}
